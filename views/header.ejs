	<body>
    <!-- Ezeket majd külön JS fájlba fogom tenni!! -->

        <script>
            $(document).ready(function() {
                // A megfelelő navigációs link aktívvá tétele az oldal betöltése után
                $("a[href$='<%= page %>']").addClass("active");
                 // Navigációs link aktívvá tétele kattintás után
                $(function() {
                    $(".main").click(function() {
                        $("a").removeClass("active");
                        $(this).addClass("active");
                    });
                });


                //A tartalom betöltése ajax segítségével a navigáció során
                //A main oldalra történik az "a href" érték posztolása, majd a válasz maga az elérni kívánt oldal lesz, ami a contentbe kerül betöltésre
                $('.nav-link').click(function() {
                   var page = $(this).attr('href');
                   window.history.pushState("", document.title, "/"+page);// A látszat kedvéért megváltoztatjuk a böngésző címsorában a linket
                   $.ajax({url:"main", type:"POST", data: ({page: page}), async:true, cache:false, success:function(result) 
                    {
                        $('#content').html(result);
                    }});
                   return false;
                });
                document.title =  "Szehoot - " + $(".active").text(); //Title átírása a menü szövegére az active class alapján
            });
           </script>

                

