<% if (typeof status !== 'undefined') { %>
	<div class="alert alert-danger d-flex alert-dismissible" role="alert">
		<svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill"/></svg>
		<div class="float-end">
			<% switch (status) {
			case '1' : %>
				A teszt kitöltése regisztrációhoz kötött!
				<% break;
			case '2' : %>
				A belépéshez használt pinkód nem létezik!
				<% break;
			case '3' : %>
				A belépéshez használt jelszó hibás!
				<% break;
			case '4' : %>
				A belépéshez használt felhasználónév nem létezik!
				<% break; %>
		  	<% } %>
		</div>
		<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
	  </div>
<% } %>

		<div class="container fastjoin">
		</br>
			<h1 class="text-center">Üdvözlünk a Szehoot weboldalán!</h1>
			<h6 class="text-center">A rendszer célja, hogy támogassa a hallgatókat a vizsgákra való felkészülésben.</h6>
			<div class="row justify-content-md-center">
			<div class="col-lg-3">
				<form action="/" method="post">
					<div class="card mt-5">
						<div class="card-header">
							<div class="row justify-content-center">
								<div class="col-12">
									<h5 style="text-align: center" class="card-title">Bejelentkezés</h5>
								</div>
							</div>
						</div>
						<div class="form-group mb-3"> 
							<label class="form-label" for="username"><b>Felhasználónév</b></label>
							<input class="form-control" type="text" placeholder="Írd be a felhasználóneved" name="username" required>
						</div>
						<div class="form-group mb-3"> 
							<label class="form-label" for="password"><b>Jelszó</b></label>
							<input class="form-control" type="password" placeholder="Írd be a jelszavad" name="password" required>
						</div>	
						<button class="btn btn-primary mt-2" type="submit" id="gomb" onclick="">Bejelentkezés</button>
					</div>
				</form>
			</div>
			<div class="col-lg-3">
				<form action="/joinTest" method="post">
					<div class="card mt-5">
						<div class="card-header">
							<div class="row justify-content-center">
								<div class="col-12">
									<h5 style="text-align: center" class="card-title">Gyors csatlakozás</h5>
								</div>
							</div>
						</div>
						<div class="form-group mb-3"> 
							<label class="form-label" for="nickname"><b>Becenév</b></label>
							<input class="form-control" type="text" placeholder="Írd be a beceneved" name="nickname" required>
						</div>
						<div class="form-group mb-3"> 
							<label class="form-label" for="pincode"><b>PIN kód</b></label>
							<input class="input-pincode" maxlength="6" type="text" placeholder="000000" name="pincode" required>
						</div>	
						<button class="btn btn-primary mt-2" type="submit" onclick="">Csatlakozás</button>
					</div>
				</form>
			</div>

		</div>
		</div>